        static Hemisphere()
        {
            CommandActive = false;
            //if (Properties.Settings.Default.AutoOpenClose && LoadHemisphereMotorProfile())
            if (AppSettings.Instance.AutoOpenClose && LoadHemisphereMotorProfile())
