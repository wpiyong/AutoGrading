        bool Validate(object value)
        {
            Regex regex = new Regex(@"^[0-9]+$");

            bool result = false;
            string inputString = (value ?? string.Empty).ToString();
            if (inputString.Length == 12 && regex.IsMatch(inputString))
            {
                result = true;
            }
            return result;
        }


